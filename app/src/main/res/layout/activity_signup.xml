<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/carlogin">
    <include
        android:id="@+id/main_title"
        layout="@layout/signuptitle_layout" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="0dp"
        />
    <EditText
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="80dp"
        android:hint="请输入账户名"
        android:textSize="15dp"
        android:background="@drawable/edit"
        android:id="@+id/et_namesignup"
        />
    <EditText
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:hint="请输入密码"
        android:textSize="15dp"
        android:background="@drawable/edit"
        android:inputType="textPassword"
        android:id="@+id/et_psdsignup"
        />
    <EditText
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:hint="再次输入密码"
        android:textSize="15dp"
        android:background="@drawable/edit"
        android:inputType="textPassword"
        android:id="@+id/et_psd2signup"
        />
    <EditText
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:hint="请输入手机号码"
        android:textSize="15dp"
        android:background="@drawable/edit"
        android:inputType="textPassword"
        android:id="@+id/et_userphone"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/btn_singupsuccess"
        android:layout_marginTop="30dp"
        android:text="注册"
        android:textColor="#fff"
        android:layout_marginLeft="230dp"
        android:background="@drawable/btn"
        />
</LinearLayout>