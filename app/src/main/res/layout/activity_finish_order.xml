<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".workerui.order.finishOrderActivity">

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:background="#EAE9E9"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="0px"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <EditText
            android:id="@+id/et_worker_evalute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:hint="请填写您维修订单的总结！"
            android:textSize="15dp"
            android:textStyle="bold"
            android:nextFocusLeft="@id/et_worker_evalute"
            android:nextFocusUp="@id/et_worker_evalute" />

        <ImageView
            android:id="@+id/iv_sendMsg_worker"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="75dp"
            android:src="@mipmap/mypho" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_sendMsg_worker"
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="-340dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/btn_time"
        android:text="提交"
        android:textColor="#fff" />
</LinearLayout>