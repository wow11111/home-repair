<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/iv_myuser"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/myuser" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_myuser"
            android:text="张三"
            android:textColor="#000000"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/tv_userphone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_myuser"
            android:text="18888000000"
            android:textColor="#000000"
            android:textSize="15dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C6C4C4" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/rl_2">

        <ImageView
            android:id="@+id/iv_mymore"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/mymore" />

        <EditText
            android:id="@+id/et2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/iv_mymore"
            android:background="#fff"
            android:text="钱湖小区寝室楼"
            android:textColor="#000000"
            android:textSize="15dp" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C6C4C4" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/rl_25">

        <ImageView
            android:id="@+id/iv_mymore25"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/mymore" />

        <EditText
            android:id="@+id/et3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="0dp"
            android:background="#fff"
            android:layout_toRightOf="@id/iv_mymore25"
            android:text="53号楼"
            android:textColor="#000000"
            android:textSize="15dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C6C4C4" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/rl_3">

        <ImageView
            android:id="@+id/iv_mylocation"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/mylocation2" />

        <EditText
            android:id="@+id/et4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="0dp"
            android:background="#fff"
            android:layout_toRightOf="@id/iv_mylocation"
            android:text="525寝室"
            android:textColor="#000000"
            android:textSize="15dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C6C4C4" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/rl_type">

        <ImageView
            android:id="@+id/iv_mymore2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/mymore" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_mymore2"
            android:text="电"
            android:textColor="#000000"
            android:textSize="15dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C6C4C4" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/rl_typeselection">

        <ImageView
            android:id="@+id/iv_mymore3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/mymore" />

        <TextView
            android:id="@+id/tv5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_mymore3"
            android:text="饮水机插座"
            android:textColor="#000000"
            android:textSize="15dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C6C4C4" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/iv_mymsg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/mymsg" />

        <EditText
            android:id="@+id/et6"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/iv_mymsg"
            android:background="@null"
            android:hint="请输入一句话报修内容"
            android:textColor="#000000"
            android:textSize="15dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#C6C4C4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105dp">

        <ImageView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="10dp"
            android:id="@+id/iv_sendMsg"
            android:src="@mipmap/mypho" />
        <ImageView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:id="@+id/iv_sendMsg2"
            android:src="@mipmap/mypho" />
        <ImageView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:id="@+id/iv_sendMsg3"
            android:src="@mipmap/mypho" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E4E4E4">

        <Button
            android:layout_width="340dp"
            android:layout_height="45dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_time"
            android:text="提交"
            android:textColor="#fff"
            android:id="@+id/btn_sendMsg"
            />

    </LinearLayout>
</LinearLayout>
