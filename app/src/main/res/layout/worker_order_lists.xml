<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F4F4">
    <View
        android:id="@+id/v_0"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#C6C4C4"
        android:layout_marginTop="0dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:layout_below="@+id/v_0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="13dp"
                android:src="@mipmap/mylist_1" />

            <TextView
                android:id="@+id/tv_mylist_ordertime_worker_order"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="[2020-6-1]"
                android:textColor="#1296db"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_mylist_ordernumber_worker_order"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="202006011224"
                android:textColor="#1296db"
                android:textSize="13dp" />


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ECE8E8" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="8dp"
                android:src="@mipmap/mylist_2" />

            <TextView
                android:id="@+id/tv_mylist_username_worker_order"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="黄三"
                android:textColor="#1296db"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_order_code_worker_order"
                android:layout_width="60dp"
                android:layout_height="22dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/tv_radious"
                android:gravity="center_horizontal"
                android:text="已受理"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="15dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ECE8E8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/mylist_3" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/mylist_location" />

                <TextView
                    android:id="@+id/tv_location1_worker_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="钱湖校区寝室楼-" />

                <TextView
                    android:id="@+id/tv_location2_worker_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="53号楼-" />

                <TextView
                    android:id="@+id/tv_location3_worker_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="525" />
            </LinearLayout>

            <View
                android:layout_width="340dp"
                android:layout_height="1dp"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="-45dp"
                android:background="#ECE8E8" />

            <TextView
                android:id="@+id/tv_repair_type_worker_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="112dp"
                android:text="【饮水机损坏】：" />

            <TextView
                android:id="@+id/tv_repair_detail_worker_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:text="饮水机不能充电，喝不了热水哦" />


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:background="#C6C4C4" />

            <LinearLayout
                android:id="@+id/ll_worker_receive_order"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="250dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="1dp"
                    android:text="接受订单"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:src="@mipmap/mylist_row_right" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#C6C4C4" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>